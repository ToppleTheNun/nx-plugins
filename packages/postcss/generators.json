{
  "$schema": "http://json-schema.org/schema",
  "name": "nx-plugin-postcss",
  "version": "0.0.1",
  "generators": {
    "init": {
      "factory": "./src/generators/init/init",
      "schema": "./src/generators/init/schema.json",
      "description": "Add PostCSS configuration to the workspace (add dependencies)",
      "aliases": ["ng-add"],
